{{> image-preview-template}}
<template id="template-category-selected">
  <div
    class="category-selected--display"
    data-toggle="tooltip"
    data-placement="top"
    title="The category assigned to this class. Click the 'X' button on the right to remove it"
  >
    <span class="category-selected--name">Name of Tag Selected</span>
    <button type="button" class="btn-close category-selected--x-button" aria-label="Close"></button>
  </div>
</template>

<template id="template-category-missing-warning">
    <div
    class="category-selected--display danger"
    data-toggle="tooltip"
    data-placement="top"
    title="Select a new tag to fix it"
  >
    <span class="category-selected--name">WARNING: THE CATEGORY '###' ASSIGNED TO THIS CLASS HAS BEEN DELETE. PLEASE SELECT A NEW ONE.</span>
  </div>
</template>

<template id="template-tag-selected">
  <div
    class="tag-selected--display"
    data-toggle="tooltip"
    data-placement="top"
    title="A tag assigned to this class. Click the 'X' button on the right to remove it. Click the Display button to select is as the preview"
  >
    <span class="tag-selected--name">Name of Tag Selected</span>
    <button type="button" class="btn-close tag-selected--x-button" aria-label="Close"></button>
    <button class="tag-selected--display-button" type="button">Display</button>
  </div>
</template>

<template id="template-tag-missing-warning">
    <div
    class="tag-selected--display danger"
    data-toggle="tooltip"
    data-placement="top"
    title="Select a new tag to fix it"
  >
    <span class="category-selected--name">WARNING: ALL TAGS ASSIGNED TO THIS CLASS HAVE BEEN DELETED. PLEASE SELECT AT LEAST ONE.</span>
  </div>
</template>

<template id="template-video-preview-iframe">
  <div class="embed-responsive embed-responsive-16by9">
    <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/SquJqkblwDE"></iframe>
  </div>
</template>

<template id="template-image-selected">
  <div class="col-4 image-card-holder">
    <div class="card">
      <button
        type="button"
        data-src=""
        data-alt=""
        class="btn-close image-selected--button"
        aria-label="Close"
      ></button>
      <img class="card-img-top" src="https://i.ibb.co/r6BjhCh/llama.jpg" alt="Card image cap" />
      <div class="card-body">
        <p class="card-text">A description of the image for the alt tag</p>
      </div>
    </div>
  </div>
</template>

<template id="template-class-dropdown-option">
  <li><div class="dropdown-item class-select-dropdown-item" data-id="i">Action</div></li>
</template>

<template id="template-searchbar-option">
  <li><div class="dropdown-item searchbar-dropdown-item" data-id="i">Action</div></li>
</template>