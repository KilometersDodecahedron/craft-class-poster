    <div class="row" id="additional-card-holder">

    </div>
  </div>
  {{! description }}
  <div class="row">
    <div class="form-group">
      <label id="description-label" for="description">Class Description</label>
      <div
        class="form-control"
        id="description"
        rows="8"
        data-toggle="tooltip"
        data-placement="top"
        title="The class overview. DON'T USE H1 HEADERS"
      >
      </div>
    </div>
  </div>
  <br />
  <br />
  <br />
  {{! description - what's included }}
  <div class="row">
    <div class="form-group">
      <label id="description-whats-included-label" for="description-whats-included">What's included?</label>
      <div
        class="form-control"
        id="description-whats-included"
        rows="8"
        data-toggle="tooltip"
        data-placement="top"
        title="What will the participants recieve in their kits? DON'T USE H1 HEADERS"
      >
      </div>
    </div>
